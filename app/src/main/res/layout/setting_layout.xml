<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <!-- 登录密码 -->
    <RelativeLayout
        android:id="@+id/rl_settingPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutSize"
        android:layout_marginTop="@dimen/spacingSize"
        android:background="@drawable/bg_linearlayout_selected">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录密码"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacingSize"/>

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacingSize"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineSize"
        android:background="@color/colorBackground"/>

    <!-- 提现密码 -->
    <RelativeLayout
        android:id="@+id/rl_withdrawPassword"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutSize"
        android:background="@drawable/bg_linearlayout_selected">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提现密码"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacingSize"/>

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacingSize"/>

    </RelativeLayout>

    <!-- 清理聊天缓存 -->
    <RelativeLayout
        android:id="@+id/rl_cleanChat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutSize"
        android:background="@drawable/bg_linearlayout_selected"
        android:layout_marginTop="@dimen/spacingSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清理聊天缓存"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacingSize"/>

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacingSize"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineSize"
        android:background="@color/colorBackground"/>

    <!-- 提醒设置 -->
    <RelativeLayout
        android:id="@+id/rl_remindSetting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutSize"
        android:background="@drawable/bg_linearlayout_selected">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒设置"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacingSize"/>

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacingSize"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineSize"
        android:background="@color/colorBackground"/>

    <!-- 关于我们 -->
    <RelativeLayout
        android:id="@+id/rl_aboutUs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutSize"
        android:background="@drawable/bg_linearlayout_selected">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacingSize"/>

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacingSize"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineSize"
        android:background="@color/colorBackground"/>

    <!-- 用户反馈 -->
    <RelativeLayout
        android:id="@+id/rl_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutSize"
        android:background="@drawable/bg_linearlayout_selected">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户反馈"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacingSize"/>

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacingSize"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lineSize"
        android:background="@color/colorBackground"/>

    <!-- 联系客服 -->
    <RelativeLayout
        android:id="@+id/rl_contactCustomerService"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutSize"
        android:background="@drawable/bg_linearlayout_selected">

        <TextView
            android:id="@+id/tv_contactCustomerService"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系客服"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacingSize"/>

        <TextView
            android:id="@+id/tv_customerServicePhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16603858967"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/spacingSize"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/icon_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/spacingSize"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

    </LinearLayout>


    <!-- 退出登录 -->
    <TextView
        android:id="@+id/tt_signOut"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutSize"
        android:text="退出登录"
        android:textSize="@dimen/titleSize"
        android:textColor="@color/colorTitle"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal|center_vertical"/>




</LinearLayout>
