<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacingSize">

    <!--<com.bophia.erik.ykxrider.utils.MyWebView-->
        <!--android:id="@+id/mwv_goodsImg"-->
        <!--android:layout_width="25dp"-->
        <!--android:layout_height="25dp">-->

    <!--</com.bophia.erik.ykxrider.utils.MyWebView>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/emphasize_text"
            android:text="goodsName"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"
            android:layout_weight="5" />


        <TextView
            android:id="@+id/tv_selfSellState"
            android:layout_width="50dp"
            android:layout_height="@dimen/emphasize_text"
            android:text="是"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"/>

        <TextView
            android:id="@+id/tv_goodsNum"
            android:layout_width="50dp"
            android:layout_height="@dimen/emphasize_text"
            android:text="×100"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"/>

        <TextView
            android:id="@+id/tv_goodsPrice"
            android:layout_width="50dp"
            android:layout_height="@dimen/emphasize_text"
            android:text="¥88.88"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/colorTitle"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tv_disposeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/little_spacing_size"
        android:text="处理详情"
        android:textSize="@dimen/titleSize"
        android:textColor="@color/colorEmphasize"
        android:visibility="gone"/>

</LinearLayout>
